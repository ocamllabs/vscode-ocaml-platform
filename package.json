{
  "name": "ocaml-platform",
  "displayName": "OCaml Platform",
  "description": "Official OCaml Support from OCamlLabs",
  "license": "MIT",
  "version": "0.0.2",
  "publisher": "ocamllabs",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocamllabs/vscode-ocaml-platform"
  },
  "bugs": {
    "url": "https://github.com/ocamllabs/vscode-ocaml-platform/issues"
  },
  "homepage": "https://github.com/ocamllabs/vscode-ocaml-platform",
  "main": "./out/client/extension",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:ocaml",
    "onLanguage:reason"
  ],
  "icon": "assets/logo.png",
  "contributes": {
    "configuration": {
      "title": "OCaml configuration",
      "properties": {
        "ocaml.lsp.path": {
          "type": "string",
          "default": "ocamllsp",
          "description": "Path to the LSP binary"
        }
      }
    },
    "problemMatchers": [
      {
        "name": "ocamlc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": [
          {
            "regexp": "^\\s*\\bFile\\b\\s*\"(.*)\",\\s*\\bline\\b\\s*(\\d+),\\s*\\bcharacters\\b\\s*(\\d+)-(\\d+)\\s*:\\s*$",
            "file": 1,
            "line": 2,
            "column": 3,
            "endColumn": 4
          },
          {
            "regexp": "^(?:\\s*\\bParse\\b\\s*)?\\s*\\b([Ee]rror|Warning)\\b\\s*(?:\\(\\s*\\bwarning\\b\\s*(\\d+)\\))?\\s*:\\s*(.*)$",
            "severity": 1,
            "code": 2,
            "message": 3
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "ocaml.dune",
        "aliases": [
          "dune"
        ],
        "extensions": [
          "dune",
          "jbuild"
        ],
        "configuration": "./languages/dune.json"
      },
      {
        "id": "ocaml.menhir",
        "aliases": [
          "Menhir",
          "menhir"
        ],
        "extensions": [
          ".mly"
        ]
      },
      {
        "id": "ocaml.merlin",
        "aliases": [
          "Merlin",
          "merlin"
        ],
        "extensions": [
          ".merlin"
        ]
      },
      {
        "id": "ocaml.duneproject",
        "aliases": [
          "dune project"
        ],
        "extensions": [
          "dune-project"
        ],
        "configuration": "./languages/dune.json"
      },
      {
        "id": "ocaml",
        "aliases": [
          "OCaml",
          "ocaml"
        ],
        "extensions": [
          ".ml",
          ".mli",
          ".ocamlinit"
        ],
        "configuration": "./languages/ocaml.json"
      },
      {
        "id": "ocaml.opam",
        "aliases": [
          "opam"
        ],
        "extensions": [
          ".opam",
          ".opam.locked"
        ],
        "configuration": "./languages/opam.json"
      },
      {
        "id": "ocaml.ocamlbuild",
        "aliases": [
          "OCamlbuild",
          "ocamlbuild"
        ],
        "extensions": [
          "_tags"
        ]
      },
      {
        "id": "ocaml.ocamllex",
        "aliases": [
          "OCamllex",
          "ocamllex"
        ],
        "extensions": [
          ".mll"
        ],
        "configuration": "./languages/ocamllex.json"
      },
      {
        "id": "reason",
        "aliases": [
          "Reason",
          "reason"
        ],
        "extensions": [
          ".re",
          ".rei"
        ],
        "configuration": "./languages/reason.json"
      }
    ],
    "grammars": [
      {
        "language": "ocaml.dune",
        "scopeName": "source.dune",
        "path": "./syntaxes/dune.json"
      },
      {
        "language": "ocaml.merlin",
        "scopeName": "source.ocaml.merlin",
        "path": "./syntaxes/merlin.json"
      },
      {
        "scopeName": "markdown.ocaml.codeblock",
        "path": "./syntaxes/ocaml-markdown-codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.ocaml": "ocaml"
        }
      },
      {
        "language": "ocaml",
        "scopeName": "source.ocaml",
        "path": "./syntaxes/ocaml.json"
      },
      {
        "language": "ocaml.ocamlbuild",
        "scopeName": "source.ocaml.ocamlbuild",
        "path": "./syntaxes/ocamlbuild.json"
      },
      {
        "language": "ocaml.ocamllex",
        "scopeName": "source.ocaml.ocamllex",
        "path": "./syntaxes/ocamllex.json"
      },
      {
        "language": "ocaml.opam",
        "scopeName": "source.ocaml.opam",
        "path": "./syntaxes/opam.json"
      },
      {
        "scopeName": "markdown.reason.codeblock",
        "path": "./syntaxes/reason-markdown-codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.reason": "reason"
        }
      },
      {
        "language": "reason",
        "scopeName": "source.reason",
        "path": "./syntaxes/reason.json"
      }
    ],
    "snippets": [
      {
        "language": "ocaml",
        "path": "./snippets/ocaml.json"
      },
      {
        "language": "ocaml.ocamllex",
        "path": "./snippets/ocamllex.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint \"**/*.ts\" --cache",
    "fmt:check": "prettier --check \"**/*.{json,md,ts,yml}\"",
    "fmt": "prettier --write \"**/*.{json,md,ts,yml}\"",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "package": "vsce package --yarn"
  },
  "dependencies": {
    "vscode-languageclient": "6.1.3"
  },
  "devDependencies": {
    "@types/node": "13.9.2",
    "@types/vscode": "1.43.0",
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@typescript-eslint/parser": "2.24.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-prettier": "3.1.2",
    "prettier": "2.0.0",
    "typescript": "3.8.3",
    "vsce": "1.74.0",
    "vscode-test": "1.3.0"
  }
}
