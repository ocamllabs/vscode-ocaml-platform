{
  "name": "ocaml-platform",
  "displayName": "OCaml Platform",
  "description": "Official OCaml Support from OCamlLabs",
  "license": "MIT",
  "version": "0.4.0",
  "publisher": "ocamllabs",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocamllabs/vscode-ocaml-platform"
  },
  "bugs": {
    "url": "https://github.com/ocamllabs/vscode-ocaml-platform/issues"
  },
  "homepage": "https://github.com/ocamllabs/vscode-ocaml-platform",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:ocaml",
    "onLanguage:reason"
  ],
  "icon": "assets/logo.png",
  "contributes": {
    "configuration": {
      "title": "OCaml configuration",
      "properties": {
        "ocaml.toolChainRoot": {
          "type": "string",
          "default": null,
          "description": "Determines where to find the toolchain for a given project"
        },
        "ocaml.packageManager": {
          "type": "string",
          "default": null,
          "description": "Determines what package manager to use for a given project"
        },
        "ocaml.lsp.path": {
          "type": "string",
          "default": "ocamllsp",
          "description": "Path to the LSP binary"
        }
      }
    },
    "problemMatchers": [
      {
        "name": "ocamlc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": [
          {
            "regexp": "^\\s*\\bFile\\b\\s*\"(.*)\",\\s*\\bline\\b\\s*(\\d+),\\s*\\bcharacters\\b\\s*(\\d+)-(\\d+)\\s*:\\s*$",
            "file": 1,
            "line": 2,
            "column": 3,
            "endColumn": 4
          },
          {
            "regexp": "^(?:\\s*\\bParse\\b\\s*)?\\s*\\b([Ee]rror|Warning)\\b\\s*(?:\\(\\s*\\bwarning\\b\\s*(\\d+)\\))?\\s*:\\s*(.*)$",
            "severity": 1,
            "code": 2,
            "message": 3
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "ocaml.dune",
        "aliases": [
          "dune"
        ],
        "extensions": [
          "dune",
          "jbuild"
        ],
        "configuration": "./languages/dune.json"
      },
      {
        "id": "ocaml.menhir",
        "aliases": [
          "Menhir",
          "menhir"
        ],
        "extensions": [
          ".mly"
        ]
      },
      {
        "id": "ocaml.merlin",
        "aliases": [
          "Merlin",
          "merlin"
        ],
        "extensions": [
          ".merlin"
        ]
      },
      {
        "id": "ocaml.duneproject",
        "aliases": [
          "dune project"
        ],
        "extensions": [
          "dune-project"
        ],
        "configuration": "./languages/dune.json"
      },
      {
        "id": "ocaml",
        "aliases": [
          "OCaml",
          "ocaml"
        ],
        "extensions": [
          ".ml",
          ".mli",
          ".ocamlinit"
        ],
        "configuration": "./languages/ocaml.json"
      },
      {
        "id": "ocaml.opam",
        "aliases": [
          "opam"
        ],
        "extensions": [
          ".opam",
          ".opam.locked"
        ],
        "configuration": "./languages/opam.json"
      },
      {
        "id": "ocaml.ocamlbuild",
        "aliases": [
          "OCamlbuild",
          "ocamlbuild"
        ],
        "extensions": [
          "_tags"
        ]
      },
      {
        "id": "ocaml.ocamllex",
        "aliases": [
          "OCamllex",
          "ocamllex"
        ],
        "extensions": [
          ".mll"
        ],
        "configuration": "./languages/ocamllex.json"
      },
      {
        "id": "ocaml.menhir",
        "aliases": [
          "Menhir",
          "menhir",
          "OCamlyacc",
          "ocamlyacc"
        ],
        "extensions": [
          ".mly"
        ],
        "configuration": "./languages/menhir.json"
      },
      {
        "id": "reason",
        "aliases": [
          "Reason",
          "reason"
        ],
        "extensions": [
          ".re",
          ".rei"
        ],
        "configuration": "./languages/reason.json"
      }
    ],
    "grammars": [
      {
        "language": "ocaml.dune",
        "scopeName": "source.dune",
        "path": "./syntaxes/dune.json"
      },
      {
        "language": "ocaml.merlin",
        "scopeName": "source.ocaml.merlin",
        "path": "./syntaxes/merlin.json"
      },
      {
        "scopeName": "markdown.ocaml.codeblock",
        "path": "./syntaxes/ocaml-markdown-codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.ocaml": "ocaml"
        }
      },
      {
        "language": "ocaml",
        "scopeName": "source.ocaml",
        "path": "./syntaxes/ocaml.json"
      },
      {
        "language": "ocaml.ocamlbuild",
        "scopeName": "source.ocaml.ocamlbuild",
        "path": "./syntaxes/ocamlbuild.json"
      },
      {
        "language": "ocaml.ocamllex",
        "scopeName": "source.ocaml.ocamllex",
        "path": "./syntaxes/ocamllex.json"
      },
      {
        "language": "ocaml.menhir",
        "scopeName": "source.ocaml.menhir",
        "path": "./syntaxes/menhir.json"
      },
      {
        "language": "ocaml.opam",
        "scopeName": "source.ocaml.opam",
        "path": "./syntaxes/opam.json"
      },
      {
        "scopeName": "markdown.reason.codeblock",
        "path": "./syntaxes/reason-markdown-codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.reason": "reason"
        }
      },
      {
        "language": "reason",
        "scopeName": "source.reason",
        "path": "./syntaxes/reason.json"
      }
    ],
    "snippets": [
      {
        "language": "ocaml",
        "path": "./snippets/ocaml.json"
      },
      {
        "language": "ocaml.ocamllex",
        "path": "./snippets/ocamllex.json"
      }
    ]
  },
  "scripts": {
    "clean": "bsb -clean",
    "build:bsb": "bsb -make-world",
    "build:webpack": "webpack --mode production",
    "build": "yarn run build:bsb && yarn run build:webpack",
    "watch:bsb": "bsb -make-world -w",
    "watch:webpack": "webpack --mode development --watch",
    "watch": "run-p watch:bsb watch:webpack",
    "test:bsb": "node ./test/runBsbTests.js",
    "test:esy": "node ./test/runEsyTests.js",
    "test:unit": "yarn run build:bsb && jest src/",
    "test:opam": "node ./test/runOpamTests.js",
    "test": "yarn run test:unit && yarn run test:opam ",
    "vscode:prepublish": "yarn run build",
    "package": "vsce package --yarn",
    "fmt:check": "prettier --check .",
    "fmt": "prettier --write ."
  },
  "dependencies": {
    "request": "2.88.2",
    "request-progress": "3.0.0",
    "rimraf": "3.0.2",
    "semver": "7.2.1",
    "uuid": "7.0.3",
    "vscode-languageclient": "6.1.3"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "0.5.1",
    "@glennsl/bs-json": "5.0.2",
    "bs-platform": "7.2.2",
    "fs-extra": "9.0.0",
    "jest-cli": "25.3.0",
    "mocha": "7.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.4",
    "vsce": "1.75.0",
    "vscode": "1.1.36",
    "vscode-test": "1.3.0",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11"
  }
}
